<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

   <EditText
       android:id="@+id/barcode_address"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="@string/barcode_address"
       android:inputType="text"
    />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/barcode_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@id/barcode_address"
        android:background="@android:color/holo_blue_light"
        android:layout_centerInParent="true"/>
    <Button
        android:id="@+id/barcode_generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/barcode_image"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="@string/barcode_generate"/>
    <Button
        android:id="@+id/barcode_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/barcode_generate"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:text="@string/barcode_scan"/>
</RelativeLayout>